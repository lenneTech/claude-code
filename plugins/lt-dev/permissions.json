{
  "$schema": "./permissions.schema.json",
  "description": "Required Bash permissions for lenne.tech Claude Code skills and agents. Update this file when adding new CLI commands.",
  "permissions": [
    {
      "pattern": "Bash(npm test:*)",
      "description": "Run npm test commands",
      "usedBy": ["building-stories-with-tdd", "npm-package-maintenance", "nest-server-updating"]
    },
    {
      "pattern": "Bash(npm run test:*)",
      "description": "Run npm run test commands",
      "usedBy": ["building-stories-with-tdd", "npm-package-maintenance", "nest-server-updating"]
    },
    {
      "pattern": "Bash(npm run test\\:e2e:*)",
      "description": "Run end-to-end tests",
      "usedBy": ["generating-nest-servers"]
    },
    {
      "pattern": "Bash(npm start:*)",
      "description": "Start the application",
      "usedBy": ["generating-nest-servers"]
    },
    {
      "pattern": "Bash(npm run start:*)",
      "description": "Start the application in different modes",
      "usedBy": ["generating-nest-servers", "developing-lt-frontend"]
    },
    {
      "pattern": "Bash(npm run build:*)",
      "description": "Build the application",
      "usedBy": ["generating-nest-servers", "developing-lt-frontend", "npm-package-maintenance", "nest-server-updating"]
    },
    {
      "pattern": "Bash(npm run lint:*)",
      "description": "Run linter checks",
      "usedBy": ["generating-nest-servers", "npm-package-maintenance", "nest-server-updating"]
    },
    {
      "pattern": "Bash(npm run generate-types:*)",
      "description": "Generate TypeScript types from backend API",
      "usedBy": ["developing-lt-frontend"]
    },
    {
      "pattern": "Bash(lt server:*)",
      "description": "Execute lt server commands (module, object, addProp, create)",
      "usedBy": ["generating-nest-servers"]
    },
    {
      "pattern": "Bash(lt:*)",
      "description": "Execute general lt CLI commands (git, fullstack)",
      "usedBy": ["using-lt-cli"]
    },
    {
      "pattern": "Bash(npm audit:*)",
      "description": "Run security audit on npm packages",
      "usedBy": ["npm-package-maintenance", "nest-server-updating"]
    },
    {
      "pattern": "Bash(npm install:*)",
      "description": "Install npm packages",
      "usedBy": ["npm-package-maintenance", "nest-server-updating"]
    },
    {
      "pattern": "Bash(npm uninstall:*)",
      "description": "Uninstall npm packages",
      "usedBy": ["npm-package-maintenance"]
    },
    {
      "pattern": "Bash(npx ncu:*)",
      "description": "Check for npm package updates using npm-check-updates",
      "usedBy": ["npm-package-maintenance"]
    },
    {
      "pattern": "Bash(lt server module:*)",
      "description": "Create new NestJS module",
      "usedBy": ["generating-nest-servers"]
    },
    {
      "pattern": "Bash(lt server addProp:*)",
      "description": "Add property to NestJS module",
      "usedBy": ["generating-nest-servers"]
    },
    {
      "pattern": "Bash(lt git get:*)",
      "description": "Checkout or create git branch",
      "usedBy": ["using-lt-cli"]
    },
    {
      "pattern": "Bash(npm run update:*)",
      "description": "Run project update script",
      "usedBy": ["nest-server-updating"]
    },
    {
      "pattern": "Bash(npm list:*)",
      "description": "List installed npm packages",
      "usedBy": ["nest-server-updating"]
    },
    {
      "pattern": "Bash(npm view:*)",
      "description": "View npm package information",
      "usedBy": ["nest-server-updating"]
    },
    {
      "pattern": "Bash(gh release:*)",
      "description": "Access GitHub releases via gh CLI",
      "usedBy": ["nest-server-updating"]
    },
    {
      "pattern": "Bash(gh api:*)",
      "description": "Access GitHub API via gh CLI for migration guides",
      "usedBy": ["nest-server-updating"]
    }
  ]
}
